<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/is_monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toStartOf="@+id/is_tuesday"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actions" />

        <SearchView
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/actions"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search" />

        <CheckBox
            android:id="@+id/is_tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/is_monday"
            app:layout_constraintEnd_toStartOf="@+id/is_wednesday"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/is_monday" />

        <CheckBox
            android:id="@+id/is_wednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/is_tuesday"
            app:layout_constraintEnd_toStartOf="@+id/is_thursday"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/is_tuesday" />

        <CheckBox
            android:id="@+id/is_thursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/is_wednesday"
            app:layout_constraintEnd_toStartOf="@+id/is_friday"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/is_wednesday" />

        <CheckBox
            android:id="@+id/is_friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/is_thursday"
            app:layout_constraintEnd_toStartOf="@+id/is_saturday"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/is_thursday" />

        <CheckBox
            android:id="@+id/is_saturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/is_friday"
            app:layout_constraintEnd_toStartOf="@+id/is_sanday"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/is_friday" />

        <CheckBox
            android:id="@+id/is_sanday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/is_saturday"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/is_saturday" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пн"
            app:layout_constraintBottom_toTopOf="@+id/is_monday"
            app:layout_constraintEnd_toEndOf="@+id/is_monday"
            app:layout_constraintStart_toStartOf="@+id/is_monday" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вт"
            app:layout_constraintBottom_toTopOf="@+id/is_tuesday"
            app:layout_constraintEnd_toEndOf="@+id/is_tuesday"
            app:layout_constraintStart_toStartOf="@+id/is_tuesday" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ср"
            app:layout_constraintBottom_toTopOf="@+id/is_wednesday"
            app:layout_constraintEnd_toEndOf="@+id/is_wednesday"
            app:layout_constraintStart_toStartOf="@+id/is_wednesday" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Чт"
            app:layout_constraintBottom_toTopOf="@+id/is_thursday"
            app:layout_constraintEnd_toStartOf="@+id/is_friday"
            app:layout_constraintStart_toStartOf="@+id/is_thursday" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пт"
            app:layout_constraintBottom_toTopOf="@+id/is_friday"
            app:layout_constraintEnd_toStartOf="@+id/is_saturday"
            app:layout_constraintStart_toStartOf="@+id/is_friday" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сб"
            app:layout_constraintBottom_toTopOf="@+id/is_saturday"
            app:layout_constraintEnd_toEndOf="@+id/is_saturday"
            app:layout_constraintStart_toStartOf="@+id/is_saturday" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вс"
            app:layout_constraintBottom_toTopOf="@+id/is_sanday"
            app:layout_constraintEnd_toEndOf="@+id/is_sanday"
            app:layout_constraintStart_toStartOf="@+id/is_sanday" />

        <Button
            android:id="@+id/create"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="Начать вырабатывать привычку"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <CheckBox
            android:id="@+id/isNeedRemind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="Напомнить"
            android:textSize="@dimen/text_size_small"
            app:layout_constraintBottom_toTopOf="@+id/create"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Spinner
            android:id="@+id/isMoreThenDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:entries="@array/is_more_then_duration"
            android:spinnerMode="dialog"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/is_tuesday" />

        <EditText
            android:id="@+id/edit_hours"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="часов"
            android:inputType="number"
            android:maxLength="2"
            app:layout_constraintBottom_toBottomOf="@+id/isMoreThenDuration"
            app:layout_constraintStart_toEndOf="@+id/isMoreThenDuration"
            app:layout_constraintTop_toTopOf="@+id/isMoreThenDuration" />

        <EditText
            android:id="@+id/edit_minutes"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="минут"
            android:inputType="numberSigned|time"
            android:maxLength="2"
            app:layout_constraintBottom_toBottomOf="@+id/edit_hours"
            app:layout_constraintStart_toEndOf="@+id/edit_hours"
            app:layout_constraintTop_toTopOf="@+id/edit_hours"
            app:layout_constraintVertical_bias="0.0" />

    </android.support.constraint.ConstraintLayout>

</layout>