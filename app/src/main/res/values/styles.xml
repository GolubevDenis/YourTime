<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="FloatingButton">
        <item name="android:layout_width">@dimen/home_action_button_size</item>
        <item name="android:layout_height">@dimen/home_action_button_size</item>
    </style>

    <style name="VerticalDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="SimpleButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/simple_button</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>

    <style name="ActionTimeViewButton">
        <item name="android:textColor">@color/white_primary_text</item>
        <item name="backgroundTint">@color/accent_dark</item>
    </style>

    <style name="LoginButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/simple_button</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>

    <style name="SimpleEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/accent</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextViewPrimary">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextViewSecondary">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <dimen name="button_height">45dp</dimen>

</resources>
